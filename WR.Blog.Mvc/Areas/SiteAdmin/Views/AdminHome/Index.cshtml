    ViewBag.Title = "Site Admin";
}

<h1>Site Admin</h1>

<ul style="list-style-type: none">
    <li>
        @Html.IconLink(" Blog Admin", "Index", "BlogAdmin", fragment: null, routeValues: null, htmlAttributes: null, iconHtmlAttributes: new { @class = "icon-book" })</li>
