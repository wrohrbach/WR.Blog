@model WR.Blog.Mvc.Areas.SiteAdmin.Models.BlogVersion

@{
    ViewBag.Title = "Editing Version of \"" + Model.Title + "\"";
}

<h1>Editing Version of <br />"@Model.Title"</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    @Html.Partial("EditForm", Model)
    @Html.HiddenFor(m => Model.VersionOfId)

    <span class="em small">Last Modified: @Model.LastModifiedDate</span>
    <hr />
    <div class="input-buttons">
        <button type="submit" name="submitButton" value="Save Version" class="btn" data-icon="&#xe083;"> Save Version</button>&nbsp;
        <button type="submit" name="submitButton" value="Save and Preview" class="btn" data-icon="&#xf330;"> Save and Preview</button>&nbsp;
        <button type="submit" name="submitButton" value="Save and Publish" class="btn" data-icon="&#xf32e;"> Save and Publish</button>&nbsp;
        @Html.IconLink(" Cancel", "Versions", null, fragment: null, routeValues: new { id = Model.VersionOfId }, htmlAttributes: new { @class = "btn" }, iconHtmlAttributes: new { @class = "icon-cancel-circle" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/ckeditor/ckeditor_js")
}
