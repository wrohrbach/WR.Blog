@model WR.Blog.Mvc.Areas.SiteAdmin.Models.BlogPost

@{
    ViewBag.Title = "Delete Post";
}

<h1>Delete Post</h1>

<h2>Are you sure you want to delete the following Post?</h2>

@using (Html.BeginForm()) {
    <div class="input-buttons">
        <button type="submit" name="submitButton" value="Delete" class="btn" data-icon="&#xe051;"> Delete</button>&nbsp;
        @Html.IconLink(" Cancel", "Index", null, fragment: null, routeValues: null, htmlAttributes: new { @class = "btn" }, iconHtmlAttributes: new { @class = "icon-cancel-circle" })
    </div>
}
<hr />
<div class="blog-title"><h1>@Model.Title</h1></div>
<div class="blog-byline">By: @Model.Author</div>
<div class="blog-publish-date">@Model.PublishedDate</div>
<div class="blog-content">@Html.Raw(Model.Text)</div>

